$TTL	604800
168.192.in-addr.arpa.	IN	SOA	EdvinToome-1.{{ domain }}. edvin.{{ domain }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;

{% for host in groups['all'] %}
168.192.in-addr.arpa.	IN	NS	{{ host }}.{{ domain }}.
{% endfor %}

{% for host in groups['all'] %}
{{ (hostvars[host]['ansible_default_ipv4']['address']|split('.'))[3] }}.{{ (hostvars[host]['ansible_default_ipv4']['address']|split('.'))[2] }} IN	PTR	{{ host }}.{{ domain }}.
{% endfor %}